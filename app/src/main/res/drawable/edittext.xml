<?xml version="1.0" encoding="utf-8"?>

<!-- 带圆角 白色背景 黄色色边框  长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-25dp"
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp">
        <shape
            android:shape="line">
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"
                android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp" />
            <stroke android:width="2dp" android:color="#008E7E" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                />
        </shape>
    </item>
</layer-list>