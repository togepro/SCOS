<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/ll">

    <ImageView
        android:id="@+id/food_image_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/food_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_toRightOf="@+id/food_image_detail"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"

        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/food_price_detail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/food_name_detail"
        android:layout_toRightOf="@+id/food_image_detail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:textColor="#BFBFBF"

        android:textSize="15sp" />

    <Button
        android:id="@+id/take_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#1FD3AC"
        android:text="点菜"
        android:onClick="click"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/add_comm_detail"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="179dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:inputType="textPersonName"
        />
</RelativeLayout>